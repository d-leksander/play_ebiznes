
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET        /login               controllers.LoginController.login
GET        /logout              controllers.LoginController.logout
GET        /basket              controllers.BasketController.getProducts
GET        /register            controllers.RegisterController.registerUser
GET        /settings            controllers.SettingsController.getSettings
GET        /user                controllers.UserController.getProfile
GET        /product             controllers.ProductController.getProducts
GET        /payment             controllers.PaymentController.pay
GET     /products                   controllers.ProductController.getProducts
GET     /addproduct                 controllers.ProductController.addProduct
POST    /addproducthandle           controllers.ProductController.addProductHandle
GET     /updateproduct/:id          controllers.ProductController.updateProduct(id: Int)
POST    /updateproducthandle        controllers.ProductController.updateProductHandle
      